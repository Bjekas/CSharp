                    <TextBox Name="TBSysEmailHost" HorizontalAlignment="Left" Height="23" Margin="197,234,0,0" Text="" VerticalAlignment="Top" MaxLines="1" Width="177" TextChanged="TBSysEmailPass_TextChanged"/>
